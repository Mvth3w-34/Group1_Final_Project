<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>TransitFrontController</servlet-name>
        <servlet-class>ViewLayer.TransitFrontController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterVehicle</servlet-name>
        <servlet-class>ViewLayer.RegisterVehicle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransitMenuView</servlet-name>
        <servlet-class>ViewLayer.TransitMenuView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignRoutes</servlet-name>
        <servlet-class>ViewLayer.AssignRoutes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogTime</servlet-name>
        <servlet-class>ViewLayer.LogTime</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewVehicles</servlet-name>
        <servlet-class>ViewLayer.ViewVehicles</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransitFrontController</servlet-name>
        <url-pattern>/TransitFrontController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterVehicle</servlet-name>
        <url-pattern>/RegisterVehicle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransitMenuView</servlet-name>
        <url-pattern>/TransitMenuView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignRoutes</servlet-name>
        <url-pattern>/AssignRoutes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogTime</servlet-name>
        <url-pattern>/LogTime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewVehicles</servlet-name>
        <url-pattern>/ViewVehicles</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
